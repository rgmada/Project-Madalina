-- 4.b) Registering an attendee for an event.

INSERT INTO Registrations VALUES (016, 11, 5421, '2023-06-30', '200 EUR');

-- 4.c) Develop queries to retrieve event information, generate attendee lists and calculate event attendance statistics.

SELECT e.Event_Name, e.Event_Date, e.Event_Location, e.Event_Description, a.Attendee_Name, SUM (Registration_Amount) AS Attendace_Statistics
FROM Events e
JOIN Registrations r ON r.Event_Id = e.Event_Id
AND Attendees a ON a.Attendee_Id = r.Attendee_ID
WHERE e.Event_Id = '7';
